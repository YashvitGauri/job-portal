<%- include('../partials/header') %>

<div class="container py-5">
  <h2 class="text-primary mb-4">Contact Messages</h2>

  <% if (messages.length === 0) { %>
    <p>No messages yet.</p>
  <% } else { %>
    <div class="table-responsive shadow-sm rounded">
      <table class="table table-bordered align-middle">
        <thead class="table-light">
          <tr>
            <th>SNo.</th>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Date</th>
            <th>Reply</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% messages.forEach((msg, i) => { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= msg.name %></td>
              <td><%= msg.email %></td>
              <td><%= msg.message %></td>
              <td><%= msg.submittedAt.toLocaleString() %></td>
              <td>
                <a href="mailto:<%= msg.email %>?subject=RE: DRDO Portal" class="btn btn-outline-primary btn-sm">Reply</a>
              </td>
              <td>
                <form action="/admin/messages/<%= msg._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this message?')">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
