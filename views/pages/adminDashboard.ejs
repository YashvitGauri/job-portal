<%- include('../partials/header') %>

<div class="container py-5">

  <h2 class="mb-4 text-primary">Admin Panel â€” All Applications</h2>

  <% if (applications.length === 0) { %>
    <p class="text-muted">No applications submitted yet.</p>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>Applicant</th>
            <th>Email</th>
            <th>Type of Fellowship</th>
            <th>Discipline</th>
            <th>Vacancies</th>
            <th>Resume</th>
            <th>Status</th>
            <th>Update Status</th>
            <th>History</th>
          </tr>
        </thead>
        <tbody>
          <% applications.forEach(app => { %>
            <tr>
              <td><%= app.userId.name %></td>
              <td><%= app.userId.email %></td>
              <td><%= app.jobId.title %></td>
              <td><%= app.jobId.discipline || '-' %></td>
              <td><%= app.jobId.vacancies %></td>
              <td>
                <a href="/<%= app.resumePath %>" class="btn btn-sm btn-outline-primary" target="_blank">View</a>
              </td>
              <td>
                <% if (app.status === 'Accepted') { %>
                  <span class="badge bg-success">Accepted</span>
                <% } else if (app.status === 'Rejected') { %>
                  <span class="badge bg-danger">Rejected</span>
                <% } else { %>
                  <span class="badge bg-info text-dark">In-Process</span>
                <% } %>
              </td>
              <td>
                <form action="/admin/application/<%= app._id %>/status" method="POST" class="d-flex">
                  <select name="status" class="form-select form-select-sm me-2">
                    <option value="In-Process" <%= app.status === 'In-Process' ? 'selected' : '' %>>In-Process</option>
                    <option value="Accepted" <%= app.status === 'Accepted' ? 'selected' : '' %>>Accepted</option>
                    <option value="Rejected" <%= app.status === 'Rejected' ? 'selected' : '' %>>Rejected</option>
                  </select>
                  <button type="submit" class="btn btn-sm btn-primary">Update</button>
                </form>
              </td>
              <td><a href="/admin/user/<%= app.userId._id %>/history" class="btn btn-sm btn-outline-secondary">
                View History
              </a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>



<%- include('../partials/footer') %>
