<%- include('../partials/header') %>

<section class="hero-section position-relative py-5">
  <!-- Translucent background image -->
  <img src="/images/drdo.jpg" alt="Plane Background" class="hero-bg-image" />

  <!-- Foreground content -->
  <div class="container position-relative z-1">
    <div class="row align-items-center">
      <div class="col-md-6 text-center text-md-start mb-4 mb-md-0">
        <h1 class="display-5 fw-bold text-primary mb-3" data-aos="fade-right">
          Pride Isn't Just Felt - It's Engineered Here.
        </h1>
        <p class="lead text-secondary mb-4" data-aos="fade-right" data-aos-delay="200">
          Contribute to cutting-edge defence research and technology with DRDO.
          Shape the future of national security.
        </p>
        <a href="/jobs" class="btn btn-primary btn-lg" data-aos="zoom-in" data-aos-delay="400">Explore Jobs</a>
      </div>
      <div class="text-center mt-4">
        <a href="#stats-section" class="scroll-down">
          <i class="bi bi-chevron-double-down fs-2"></i>
        </a>
      </div>
      <div class="col-md-6 text-center" data-aos="fade-left">
        <!-- image -->
      </div>
    </div>
  </div>

</section>

<nav class="section-nav sticky-top bg-white shadow-sm py-2" style="z-index: 1000;">
  <div class="container d-flex justify-content-center gap-4">
    <a href="#jobs-section" class="nav-link text-primary fw-semibold">Jobs</a>
    <a href="#stats-section" class="nav-link text-primary fw-semibold">Stats</a>
    <a href="#why-section" class="nav-link text-primary fw-semibold">Why DRDO</a>
    <a href="#testimonials-section" class="nav-link text-primary fw-semibold">Testimonials</a>
    <a href="#news-section" class="nav-link text-primary fw-semibold">News</a>
  </div>
</nav>


<section id="stats-section" class="stats-section py-5 bg-white" data-aos="fade-up">
  <div class="container text-center">
    <div class="row g-4">
      <div class="col-md-4">
        <h2 class="counter" data-target="85000">0</h2>
        <p>Applications Received</p>
      </div>
      <div class="col-md-4">
        <h2 class="counter" data-target="120">0</h2>
        <p>Job Openings</p>
      </div>
      <div class="col-md-4">
        <h2 class="counter" data-target="65">0</h2>
        <p>Departments Covered</p>
      </div>
    </div>
  </div>
</section>

<section id="jobs-section" class="job-cards py-5 bg-light" data-aos="fade-up">
  <div class="container">
    <h2 class="text-center mb-5">Featured Openings</h2>
    <div class="row">
  <% jobs.forEach(job => { %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= job.title %></h5>
          <p class="card-text"><%= job.discipline %></p>
          <a href="/apply/<%= job._id %>" class="btn btn-outline-primary btn-sm">Apply Now</a>
        </div>
      </div>
    </div>
  <% }) %>
</div>
  </div>
</section>

<section id="why-section" class="why-join py-5 bg-white" data-aos="fade-up">
  <div class="container">
    <h2 class="text-center mb-5" data-aos="fade-up">Why Join DRDO?</h2>
    <div class="row g-4 text-center">
